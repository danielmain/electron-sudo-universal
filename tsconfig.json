{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,               // Changed from true to false
    "noImplicitAny": false,       // Added to allow implicit any
    "strictNullChecks": false,    // Added to relax null checks
    "strictFunctionTypes": false, // Added to relax function type checks
    "strictPropertyInitialization": false, // Added to relax class property initialization
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}